<%-include('../partials/header',{title: "Register"})%>
    <h1>Register</h1>
    <form class="needs-validation" novalidate action="/register" method="post">
        <div class="mb-3">
            <label for="email">Email:</label>
            <input type="email" name="user[email]" id="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a email.
            </div>
        </div>
        <div class="mb-3">
            <label for="name">Name:</label>
            <input type="text" name="user[name]" id="name" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please give your name.
            </div>
        </div>
        <div class="mb-3">
            <label for="password">Password:</label>
            <input type="password" name="user[password]" id="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a password.
            </div>
        </div> 
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
<%-include('../partials/footer')%>