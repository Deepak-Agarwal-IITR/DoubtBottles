<%-include('../partials/header',{title: "Edit Course"})%>
<h1>Edit Course</h1>
<form class="needs-validation" novalidate action="/courses/<%=course._id %>?_method=PUT" method="post">
    <div class="mb-3">
        <label for="name">Name: </label>
        <input type="text" name="course[name]" id="name" value="<%=course.name%>" required>
    </div>
    <div class="mb-3">
        <label for="description">Description: </label>
        <textarea class="form-control" name="course[description]" id="description" rows="3"><%=course.description %> </textarea>
    </div>
    <div class="mb-3">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>

<%-include('../partials/footer')%>