<%-include('../partials/header',{title: "New Course"})%>
<h1>Add New Course</h1>
<form class="needs-validation" novalidate action="/courses" method="post">
    <div class="mb-3">
        <label for="name">Name: </label>
        <input class="form-control" type="text" name="course[name]" id="name">
    </div>
    <div class="mb-3">
        <label for="description">Description: </label>
        <textarea class="form-control" name="course[description]" id="description" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <button class="btn btn-success" type="submit">Add</button>
    </div>
</form>

<%-include('../partials/footer')%>